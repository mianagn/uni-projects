<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom, #1e3c72, #000000);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.LoginController">
    <VBox alignment="CENTER" layoutX="50" layoutY="60" prefHeight="300.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Label alignment="CENTER" prefHeight="41.0" prefWidth="315.0" style="-fx-text-fill: white; -fx-font-size: 22px;" text="Welcome to budget tracker">
         <font>
            <Font name="System Bold" size="16.0" />
         </font></Label>
        <TextField fx:id="usernameField" alignment="CENTER" maxHeight="355.0" maxWidth="280.0" minHeight="-Infinity" prefHeight="31.0" prefWidth="280.0" promptText="Username" style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 14;">
         <font>
            <Font size="16.0" />
         </font></TextField>
        <PasswordField fx:id="passwordField" alignment="CENTER" maxHeight="355.0" maxWidth="280.0" minHeight="-Infinity" prefHeight="31.0" prefWidth="280.0" promptText="Password" style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 14;">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <font>
            <Font size="16.0" />
         </font></PasswordField>
        <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="153.0" style="-fx-text-fill: red;" text="" />
        <Button fx:id="loginButton" onAction="#handleLoginButton" style="-fx-background-color: blue; -fx-text-fill: white;" text="Login">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font></Button>
    </VBox>
</AnchorPane>
